<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
	android:id="@+id/modemwwfscreen" >
	<LinearLayout
	    android:id="@+id/FrameLayout1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:weightSum="1" >
		<TextView
		    android:id="@+id/cputext"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.90"
		    android:text="CPU" >
		</TextView>
		<ProgressBar
		    android:id="@+id/cpu_load"
		    style="@android:style/Widget.ProgressBar.Horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_weight="0.10"
		    android:max="100"
		    android:maxHeight="8dp"
		    android:minHeight="8dp"
		    android:progress="0" />
	</LinearLayout>
    <LinearLayout
        android:id="@+id/FrameLayout1A"
        android:layout_width="fill_parent"
        android:layout_height="18dp"
        android:layout_weight="0.01" >
        android:weightSum="1" >
        <CheckBox
            android:id="@+id/rxrsid"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:text="Rx RsID" />
        <CheckBox
            android:id="@+id/txrsid"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:text="Tx RsID" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/modemscrollview"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_weight="0.77" >

        <TextView
            android:id="@+id/modemview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Modem Screen" >
        </TextView>
    </ScrollView>
	
	<LinearLayout
	    android:baselineAligned="false"
        android:id="@+id/FrameLayout1"
        android:layout_width="fill_parent"
        android:layout_height="140px"
        android:layout_gravity="bottom"
        android:layout_weight="0.16"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/FrameLayout4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.88"
            android:orientation="vertical"
            android:weightSum="1" >

            <view
                android:id="@+id/WFbox"
                android:layout_width="fill_parent"
                android:layout_height="140px"
                android:layout_gravity="fill_horizontal"
                class="com.AndFlmsg.waterfallView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/FrameLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.12"
            android:orientation="vertical"
            android:weightSum="1" >

            <Button
                android:id="@+id/button_wfsensup"
                android:layout_width="30dp"
                android:layout_height="53dp"
                android:layout_weight="0.50"
                android:text="+" >
            </Button>

            <Button
                android:id="@+id/button_wfsensdown"
                android:layout_width="30dp"
                android:layout_height="53dp"
                android:layout_weight="0.50"
                android:text="-" >
            </Button>
        </LinearLayout>
    </LinearLayout>
	<LinearLayout
	    android:id="@+id/FrameLayout2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:weightSum="1" >
		<TextView
		    android:id="@+id/cputext2"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.90"
			android:text="S2N" >
		</TextView>
		<ProgressBar
		    android:id="@+id/signal_quality"
		    style="@android:style/Widget.ProgressBar.Horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_weight="0.10"
		    android:max="100"
		    android:maxHeight="6dp"
		    android:minHeight="6dp"
		    android:progress="0" />
	</LinearLayout>
	<LinearLayout android:id="@+id/FrameLayout3"
		android:layout_width="fill_parent"
		android:layout_height="49dp"
		android:weightSum="1" 
		android:layout_weight="0.03">
		<Button android:id="@+id/button_modeUP" 
			android:text="Next Mode"
			android:layout_height="fill_parent" 
			android:layout_weight="0.25" 
			android:layout_width="0dp"></Button>
		<Button android:id="@+id/button_squelchUP" 
			android:text="Sqlch    Up"
			android:layout_height="fill_parent" 
			android:layout_weight="0.25" 
			android:layout_width="0dp"></Button>
		<Button android:id="@+id/button_modemONOFF" 
			android:text="Modem On/Off"
			android:layout_height="fill_parent" 
			android:layout_width="0dp" 
			android:layout_weight="0.25"></Button>
		<Button android:id="@+id/button_stopTX" 
			android:text="Stop Tx"
			android:layout_height="fill_parent" 
			android:layout_width="0dp" 
			android:layout_weight="0.25"></Button>
	</LinearLayout>
	<LinearLayout android:id="@+id/FrameLayout4"
		android:layout_width="fill_parent"
		android:layout_height="49dp"
		android:layout_weight="0.03" 
		android:weightSum="1">
		<Button android:id="@+id/button_modeDOWN" 
			android:text="Prev Mode"
			android:layout_height="fill_parent" 
			android:layout_weight="0.25" 
			android:layout_width="0dp">
		</Button>
		<Button android:id="@+id/button_squelchDOWN" 
			android:text="Sqlch Down"
			android:layout_height="fill_parent" 
			android:layout_weight="0.25" 
			android:layout_width="0dp">	
		</Button>
		<Button android:id="@+id/button_tune" 
			android:text="Tune"
			android:layout_height="fill_parent"
			android:layout_width="0dp" 
			android:layout_weight="0.25">
		</Button>
		<Button android:id="@+id/button_waterfallONOFF" 
			android:text="W.Fall On/Off"
			android:layout_width="0dp" 
			android:layout_weight="0.25" 
			android:layout_height="fill_parent">
		</Button>
	</LinearLayout>
</LinearLayout>
